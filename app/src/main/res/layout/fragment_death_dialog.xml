<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/death_dialog_main_text_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You dead"/>

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/death_dialog_main_text_text_view"
        android:id="@+id/death_dialog_go_to_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В главное меню"/>
</android.support.constraint.ConstraintLayout>