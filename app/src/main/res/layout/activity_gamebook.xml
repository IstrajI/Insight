<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/frame_layout_game_book_root"
    android:layout_height="match_parent">
    
    <Button
        android:id="@+id/button_game_book_open_actions_menu"
        android:layout_gravity="center_vertical|end"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:background="@color/white"/>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view_game_book_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:id="@+id/text_view_game_paragraph_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_16"
                android:textAppearance="?attr/textAppearance.Headline" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_paragraph_jumps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>