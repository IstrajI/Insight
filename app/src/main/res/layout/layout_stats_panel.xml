<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/top_panel_menu_button_image_view"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_menu_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/stats_panel_reworked"
        app:layout_constraintLeft_toRightOf="@+id/top_panel_menu_button_image_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- first row -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/top_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/spacing_8"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_view_stats_panel_dex_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/stats_panel_dex_title"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/image_view_stats_panel_dex_bar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/image_view_stats_panel_dex_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:paddingLeft="@dimen/spacing_8"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/text_view_stats_panel_dex_title"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_prc_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_prc_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/stats_panel_prc_title"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/image_view_stats_panel_dex_bar"
                app:layout_constraintRight_toLeftOf="@+id/image_view_stats_panel_prc_bar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/image_view_stats_panel_prc_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/text_view_stats_panel_prc_title"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_au_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_au_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/stats_panel_aur_title"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/image_view_stats_panel_prc_bar"
                app:layout_constraintRight_toLeftOf="@+id/image_view_stats_panel_au_bar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/image_view_stats_panel_au_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/text_view_stats_panel_au_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <!-- second row -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="@dimen/spacing_8"
            android:textAppearance="@style/D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_row">

            <TextView
                android:id="@+id/text_view_stats_panel_hp_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/stats_panel_hp_title"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/image_view_stats_panel_hp_bar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/image_view_stats_panel_hp_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:paddingLeft="@dimen/spacing_8"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/text_view_stats_panel_hp_title"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_time_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_time_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/stats_panel_time_title"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/image_view_stats_panel_hp_bar"
                app:layout_constraintRight_toLeftOf="@+id/image_view_stats_panel_time_bar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/image_view_stats_panel_time_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/text_view_stats_panel_time_title"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_mem_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_mem_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/stats_panel_am_title"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/image_view_stats_panel_time_bar"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_mem_bar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_mem_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="start|center_vertical"
                android:textAppearance="@style/D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/text_view_stats_panel_mem_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
