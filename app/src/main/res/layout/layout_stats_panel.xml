<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_900">

        <TextView
            android:id="@+id/text_view_stats_panel_time_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/stats_panel_time_title"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/stats_panel_second_column"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_stats_panel_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_stats_panel_time_title" />


        <!-- Second column -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/stats_panel_second_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintLeft_toRightOf="@+id/text_view_stats_panel_time_title"
            app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_amn_title"
            app:layout_constraintTop_toTopOf="parent">

            <!-- First column -->
            <TextView
                android:id="@+id/text_view_stats_panel_hp_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stats_panel_hp_title"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_hp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                app:layout_constraintRight_toLeftOf="@+id/guideline1_stats_percent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_dex_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stats_panel_dex_title"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_dex"
                app:layout_constraintTop_toBottomOf="@+id/text_view_stats_panel_hp_title" />

            <TextView
                android:id="@+id/text_view_stats_panel_dex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                app:layout_constraintRight_toLeftOf="@+id/guideline1_stats_percent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_stats_panel_hp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline1_stats_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <!-- Second column -->
            <TextView
                android:id="@+id/text_view_stats_panel_aur_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stats_panel_aur_title"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/guideline1_stats_percent"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_aur"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_aur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_stats_panel_prc_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stats_panel_prc_title"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/guideline1_stats_percent"
                app:layout_constraintRight_toLeftOf="@+id/text_view_stats_panel_prc"
                app:layout_constraintTop_toBottomOf="@+id/text_view_stats_panel_aur_title" />

            <TextView
                android:id="@+id/text_view_stats_panel_prc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_stats_panel_aur" />
        </android.support.constraint.ConstraintLayout>

        <!-- Third column -->

        <TextView
            android:id="@+id/text_view_stats_panel_amn_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/stats_panel_am_title"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/stats_panel_second_column"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_stats_panel_amn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/stats_panel_second_column"
            app:layout_constraintTop_toBottomOf="@+id/text_view_stats_panel_amn_title" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button_stats_panel_close"
        android:layout_width="@dimen/width_layout_stats_panel_close_panel"
        android:layout_height="@dimen/height_layout_stats_panel_close_panel"
        android:layout_gravity="center_horizontal"
        android:background="@color/white" />
</merge>