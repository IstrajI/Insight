<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_screen_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/button_home_continue"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/home_main_button_drawable"
            android:gravity="center"
            android:text="@string/home_screen_continue_title"
            android:textStyle="bold"
            android:textAppearance="@style/D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/button_home_new_game"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/home_main_button_drawable"
            android:gravity="center"
            android:text="@string/home_screen_new_game_title"
            android:textStyle="bold"
            android:textAppearance="@style/D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/button_home_rules"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/home_main_button_drawable"
            android:gravity="center"
            android:text="@string/home_screen_rules_title"
            android:textAppearance="@style/D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/button_home_settings"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/home_main_button_drawable"
            android:gravity="center"
            android:text="@string/home_screen_settings_title"
            android:textAppearance="@style/D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/button_home_directory"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/home_main_button_drawable"
            android:gravity="center"
            android:text="@string/home_screen_directory_title"
            android:enabled="true"
            android:textAppearance="@style/D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/button_home_achievements"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/home_main_button_drawable"
            android:gravity="center"
            android:text="Пыщ"
            android:textAppearance="@style/D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/button_home_about"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/home_main_button_drawable"
            android:gravity="center"
            android:text="@string/home_screen_about_title"
            android:textAppearance="@style/D"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>