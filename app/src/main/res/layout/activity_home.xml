<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:background="@drawable/home_screen_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/D"
            android:textSize="18sp"
            android:id="@+id/button_home_continue"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/main_menu_button_4_xxx"
            android:text="@string/home_screen_continue_title"/>

        <TextView
            android:textAppearance="@style/D"
            android:id="@+id/button_home_new_game"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/main_menu_button_4_xxx"
            android:text="@string/home_screen_new_game_title"/>

        <TextView
            android:textAppearance="@style/D"
            android:id="@+id/button_home_rules"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:background="@drawable/main_menu_button_4_xxx"
            android:text="@string/home_screen_rules_title"/>

        <TextView
            android:textAppearance="@style/D"
            android:id="@+id/button_home_settings"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:visibility="gone"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/main_menu_button_4_xxx"
            android:text="@string/home_screen_settings_title"/>

        <TextView
            android:textAppearance="@style/D.Disabled"
            android:id="@+id/button_home_achievements"
            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/main_menu_button_2_xxx_disabled"
            android:text="@string/home_screen_achievements_title"/>

        <TextView
            android:textAppearance="@style/D"
            android:id="@+id/button_home_about"
            android:textStyle="bold"
            android:layout_width="200dp"
            android:textSize="18sp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/main_menu_button_4_xxx"
            android:text="@string/home_screen_about_title"/>
    </LinearLayout>
</FrameLayout>