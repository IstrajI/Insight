<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0f12"
    app:layout_constraintVertical_chainStyle="packed">

        <com.npgames.insight.ui.book.top_panel.TopPanelView
            android:id="@+id/gamebook_stats_top_panel_view"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/spacing_16"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_armory_equipment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_armory_continue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamebook_stats_top_panel_view"/>

    <Button
        android:layout_marginTop="@dimen/spacing_8"
        android:id="@+id/button_armory_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/j_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_armory_equipment"/>

</android.support.constraint.ConstraintLayout>