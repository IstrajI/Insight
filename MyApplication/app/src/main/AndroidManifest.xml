<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.insite">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/InsightBaseTheme">

        <activity
            android:type=".ui.main.MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:type="android.intent.action.MAIN" />

                <category android:type="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:type=".ui.gamebook.GamebookActivity"/>
    </application>

</manifest>